<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ImageView_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTintMode="add"
    android:verticalScrollbarPosition="defaultPosition">

    <TextView
        android:id="@+id/textView_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Garrafa Pet" />

    <TextView
        android:id="@+id/textView_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Coca - Cola LTDA"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/textView_titulo_empresa"
        app:layout_constraintTop_toBottomOf="@+id/textView_material" />

    <TextView
        android:id="@+id/textView_titulo_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresa: "
        android:textColor="#040404"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_material"
        app:layout_constraintTop_toBottomOf="@+id/textView_material" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_material"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_material"
        app:layout_constraintTop_toTopOf="@+id/textView_material"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />


</androidx.constraintlayout.widget.ConstraintLayout>