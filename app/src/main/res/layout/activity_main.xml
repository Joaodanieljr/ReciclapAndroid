<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/carrois_gothic"
            android:gravity="center"
            android:text="Que tipo de material vocÃª possui?"
            android:textColor="#756E6E"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton_metal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/metal" />

                <ImageButton
                    android:id="@+id/imageButton_papel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/papel" />

                <ImageButton
                    android:id="@+id/imageButton_organico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/organico" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/imageButton_vidro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/vidro" />

                <ImageButton
                    android:id="@+id/imageButton_eletronico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/eletronico" />

                <ImageButton
                    android:id="@+id/imageButton_bateria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/baterias" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/imageButton_naoReciclavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/n_reciclavel" />

                <ImageButton
                    android:id="@+id/imageButton_plastico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/plastico" />

                <ImageButton
                    android:id="@+id/imageButton_oleo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/oleo" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/imageButton_madeira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:elevation="6dp"
                    app:srcCompat="@drawable/madeira" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>